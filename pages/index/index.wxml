<!--第一部分搜索  -->
<view class='page_row' bindtap="suo">
  <view class="search">
    <view class="search_edge">
      <icon class="searchcion" size='20' type='search'></icon>
      <input class="bc_text" placeholder="{{place_value}}" value="{{index_search_value}}" bindinput='bindInput' />
    </view>
  </view>
  <view class='sousuo' bindtap='searchRD'>
    <navigator url='/pages/index/nav/00_search/00_search?skey={{index_search_value}}'>搜索</navigator>
  </view>
</view>

<!--第二部分轮播图  -->
<view class='nav'>
<view class="swip-image">
  <swiper indicator-dots autoplay interval='{{interval}}' class="swip-image">
    <block wx:for="{{imgsrc}}">
      <swiper-item>
        <image src='{{item}}' style='width:100%;' mode='widthFix'></image>
      </swiper-item>
    </block>
  </swiper>
</view>
</view>


<!--第三部分分类  -->
<view class='class-item'>
  <block wx:for="{{classItem}}" wx:key="id">
    <view class='item' bindtap='navigator' data-index="{{index}}">
      <view class='item-icon'><image src='{{item.img_src}}'></image></view>
      <view class='item-title'>{{item.class}}</view>
    </view>
  </block>
</view>

